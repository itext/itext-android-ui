<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:layout_margin="8dp"
    android:background="@drawable/navigation_page_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.itextpdf.android.library.views.PdfThumbnailView
        android:id="@+id/pageThumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/navigation_page_border_background"
        app:layout_constraintDimensionRatio="1:1.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/pageThumbnail"
        app:layout_constraintStart_toStartOf="@id/pageThumbnail"
        app:layout_constraintEnd_toEndOf="@id/pageThumbnail">

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>